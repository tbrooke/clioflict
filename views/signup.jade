extends layout

block content
  .row
    .col-md-6
      if flash
        p= flash
      p Please enter an Email and Password to Create a New User Account
      form(action='signup', method='post', role='form')
        input(type='hidden', name='_csrf', value=token)
        .form-group
          label Email
          input.form-control(type='text', name='email')
        .form-group
          label Password
          input.form-control(type='password', name='password')
        .form-group
          label Admin
          input.form-control(type='checkbox', name='admin')
        input.btn.btn-default(type='submit') Submit