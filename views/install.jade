extends layout

block content
  .row
    .col-md-6
      h5 To Set up a new installation set up your App in Clio 
      a(href='http://api-docs.goclio.com/v2/index.html#authorization-with-oauth-2-0', 'Clio Documentation')
      form(action='login', method='post', role='form')
        .form-group
          label Client ID
          input.form-control(type='text', name='clientId')
        .form-group
          label Client Secret
          input.form-control(type='text', name='clientSecret')
        input.btn.btn-default(type='submit') Submit