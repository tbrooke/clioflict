@import 'nib'

person-color = #ffdddd
person-color-dark = #ffbbbb

company-color = #ddddff
company-color-dark = #bbbbff

border-style = 2px solid #ccc

#title-space
  margin: 35px 0 35px
body
  padding: 50px

search-box-padding()
  padding: 0 15px 0 15px

.search
  input[type='text']
    width: 50%
    margin-right: 20px
  .search-results
    margin-top: 35px
    float: left
    .search-account
      header
        border-bottom: border-style
        search-box-padding()
        margin-bottom: 0
        padding-bottom: 10px

      .loader
        search-box-padding()
        margin: 10px 0

      .results
        max-height: 230px
        overflow-y: scroll

      ul
        margin: 0

      margin-right: 10px
      margin-bottom: 5px
      border: 3px solid #eee
      border-radius: 5px
      padding: 0

#admin-area
  header  
    margin-bottom: 20px
    h4
      display: inline
      margin-right: 30px

.summary
  height: 35px
  width: 100%
  search-box-padding()
  border-bottom: 2px solid #ccc
  position: relative
  padding-top: 7px
  .glyphicon
    float: left
    margin-right: 10px
  .details
    float: left
  p
    margin: 0

.person-summary
  background-color: person-color
  &:hover
    background-color: person-color-dark
  &.selected
    background-color: person-color-dark


.company-summary
  background-color: company-color
  &:hover
    background-color: company-color-dark
  &.selected
    background-color: company-color-dark

.contact-details
  ul
    list-style-type: none
    padding: 0
    li
      padding: 0
      margin: 0

details()
  padding: 0
  border: border-style
  header
    width: 100%
    margin: 0
    padding: 5px
    h5.name
      float: left
      margin: 0
      padding: 0
    h6.account
      float: right
      margin: 0
      padding: 0

.person-details
  details()
  background-color: person-color
  header
    background-color: person-color-dark

.company-details
  details()
  background-color: company-color
  header
    background-color: company-color-dark
