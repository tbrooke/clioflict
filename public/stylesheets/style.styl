@import 'nib'

#title-space
  //text-align: center
  margin: 35px 0 35px
body
  padding: 50px
  //font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

search-box-padding()
  padding: 0 15px 0 15px

.search
  input[type='text']
    width: 50%
    margin-right: 20px
  .search-results
    margin-top: 35px
    .search-account
      h4
        border-bottom: 2px solid #ccc
        search-box-padding()
        margin-bottom: 0
        padding-bottom: 10px

      .loader
        search-box-padding()
        margin: 10px 0

      margin-right: 10px
      border: 3px solid #eee
      border-radius: 5px
      height: 250px
      overflow-y: scroll
      padding: 0

#admin-area
  header  
    margin-bottom: 20px
    h4
      display: inline
      margin-right: 30px

.summary
  height: 35px
  width: 100%
  search-box-padding()
  border-bottom: 2px solid #ccc
  position: relative
  padding-top: 7px
  .glyphicon
    float: left
    margin-right: 10px
  .details
    float: left
  p
    margin: 0

.person-summary
  background-color: #ffdddd

.company-summary
  background-color: #ddddff
